FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
# use ci if lock present, else fallback to install
RUN if [ -f package-lock.json ]; then npm ci; else npm install; fi
COPY . .
RUN npm run build

FROM nginx:1.27-alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist/webapp-ng/ /usr/share/nginx/html/
EXPOSE 80
